<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black1"
    android:orientation="vertical"
    >

   <LinearLayout
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:orientation="vertical"
       android:layout_marginStart="20dp"
       android:layout_marginTop="10dp"
       android:layout_gravity="center_horizontal"
       >

       <TextView
           android:id="@+id/statTrialCount"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_margin="10dp"
           android:text="Trial count: 33"
           android:textSize="18sp" />

       <TextView
           android:id="@+id/statPass"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_margin="10dp"
           android:text="X Passes, Y Fails, Z% Success rate"
           android:textSize="18sp" />

       <TextView
           android:id="@+id/statTotal"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_margin="10dp"
           android:text="Total count: 33"
           android:textSize="18sp" />

       <TextView
           android:id="@+id/statMedian"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_margin="10dp"
           android:text="Median: 33"
           android:textSize="18sp" />

       <TextView
           android:id="@+id/statMean"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_margin="10dp"
           android:text="Mean: 33"
           android:textSize="18sp" />

       <TextView
           android:id="@+id/statStdDev"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_margin="10dp"
           android:text="Standard deviation: 33"
           android:textSize="18sp" />

       <TextView
           android:id="@+id/statQuartiles"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_margin="10dp"
           android:text="Q1: 22, Q3: 44"
           android:textSize="18sp" />

       <TextView
           android:id="@+id/statMinMax"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_margin="10dp"
           android:text="Min:0, Max: 99"
           android:textSize="18sp" />
   </LinearLayout>
</LinearLayout>